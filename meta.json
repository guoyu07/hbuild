{
    "prompts":{
        "name":{
            "type": "string",
            "required": true,
            "message": "Your Project Name"
        },
        "description":{
            "type": "string",
            "required": false,
            "message": "Project description",
            "default": "My Personal  project build by hbuild"
        },
        "author":{
            "type": "string",
            "message": "Author"
        },
        "project": {
            "type": "list",
            "message": "Choose Your Project Type",
            "choices": ["h5","vue","react"]
        },
        "vuex": {
            "when": "project=='vue'",
            "type": "confirm",
            "message": "Use vuex in Your project?",
            "default": false
        },
        "preProcessor": {
            "type": "list",
            "message": "Choose CSS Pre-Processor?",
            "choices": ["LESS","SASS"]
        },
        "useZepto": {
            "type": "confirm",
            "message": "Use zepto in your project?",
            "default": true
        },
        "esLint":{
            "type": "confirm",
            "message": "Enable ESLint to lint your code?",
            "default": true
        }
    },
    "filters": {
        "src/lib/zepto/*.js": "project == 'h5'",
        "src/pages/index/tpl/*.html": "project == 'h5'",
        "src/components/index/*.vue": "project == 'vue'",
        "src/components/router/*.js": "project == 'vue'",
        "src/components/counter/*.vue": "project == 'vue' && vuex",
        "src/components/store/*.js": "project == 'vue' && vuex",
        "src/common/css/*.less": "preProcessor == 'LESS'",
        "src/pages/index/*.less": "preProcessor == 'LESS' && project == 'h5'",
        "src/pages/index/*.scss": "preProcessor == 'SASS' && project == 'h5'",
        "src/common/css/*.scss": "preProcessor == 'SASS'",
        ".eslintrc": "esLint"
    },
    "completeMessage":"To get started:\n\n  cd   {{destDirName}}\n  npm i || yarn\n  npm run dev"
}
