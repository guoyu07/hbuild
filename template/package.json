{
    "name": "{{ name }}",
    "version": "1.0.1",
    "description": "{{ description }}",
    "main": "gulpfile.js",
    "directories": {
        "doc": "docs"
    },
    "scripts": {
        "dev": "gulp dev --dev",
        "dev-daily": "gulp dev --dev-daily",
        "dev-pre": "gulp dev --dev-pre",
        "daily": "gulp daily --daily",
        "pre": "gulp pre --pre",
        "prod": "gulp prod --prod",
        "eslint": "gulp eslint"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hawx1993/hbuild.git"
    },
    "keywords": [
        "hbuild",
        "scaffold",
        "starter kit"
    ],
    "author": "{{ author }}",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/hawx1993/hbuild/issues"
    },
    "homepage": "https://github.com/hawx1993/hbuild#readme",
    "dependencies": {
        {{#if_eq project 'vue'}}
        "eslint-plugin-vue": "^2.0.1",
        "vue": "^2.3.3",
        "vue-template-compiler": "^2.3.3"{{/if_eq}}{{#vuex}},
        "vuex": "^2.3.1"{{/vuex}}
    },
    "devDependencies": {
        "autoprefixer": "^7.0.1",
        "babel-core": "^6.24.1",
        "babel-eslint": "^7.2.3",
        "babel-loader": "^7.0.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-es2015": "^6.24.1",{{#if_eq project 'react'}}
        "babel-preset-react": "^6.24.1",{{/if_eq}}
        "css-loader": "^0.28.1",
        "del": "^2.2.2",{{#if_eq project 'h5'}}
        "ejs-template-loader": "^2.0.0",{{/if_eq}}
        "express": "^4.15.2",
        "extract-text-webpack-plugin": "^2.1.0",
        "file-loader": "^0.11.1",
        "git-rev-sync": "^1.9.1",
        "gulp": "^3.9.1",
        "gulp-connect": "^5.0.0",
        "gulp-ejs": "^3.0.1",
        "gulp-eslint": "^3.0.1",
        "gulp-htmlmin": "^3.0.0",
        "gulp-rename": "^1.2.2",
        "gulp-replace": "^0.5.4",
        "gulp-sequence": "^0.4.6",{{#if_eq preProcessor 'LESS'}}
        "less": "^2.7.2",
        "less-loader": "^4.0.3",{{/if_eq}}{{#if_eq template 'mustache'}}
        "mustache-loader": "^0.4.1",{{/if_eq}}
