{
    "name": "{{ name }}",
    "version": "1.0.0",
    "description": "repaid build h5/vue/react project starter kit",
    "main": "gulpfile.js",
    "directories": {
        "doc": "docs"
    },
    "scripts": {
        "dev": "gulp dev --dev",
        "dev-daily": "gulp dev --dev-daily",
        "dev-pre": "gulp dev --dev-pre",
        "daily": "gulp daily --daily",
        "pre": "gulp pre --pre",
        "prod": "gulp prod --prod"{{#esLint}},
        "lint": "xo **/src/**/*.{vue,js} !node_modules/**"{{/esLint}}
    },
    "xo": {
        "extends": "./.eslintrc",
        "esnext": true,
        "envs": [
            "browser"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hawx1993/hbuild.git"
    },
    "keywords": [
        "hbuild",
        "scaffold",
        "starter kit"
    ],
    "author": "trigkit4 <345823102@qq.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/hawx1993/hbuild/issues"
    },
    "homepage": "https://github.com/hawx1993/hbuild#readme",
    "dependencies": {
        {{#if_eq project 'vue'}},
        "vue": "^2.3.3",
        "vue-template-compiler": "^2.3.3"{{/if_eq}}{{#vuex}},
        "vuex": "^2.3.1"{{/vuex}}
    },
    "devDependencies": {
        "autoprefixer": "^7.0.1",
        "babel-core": "^6.24.1",
        "babel-loader": "^7.0.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-es2015": "^6.24.1",{{#if_eq project 'react'}}
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",{{/if_eq}}
        "css-loader": "^0.28.1",
        "del": "^2.2.2",
        "ejs-template-loader": "^2.0.0",
        "express": "^4.15.2",
        "file-loader": "^0.11.1",
        "git-rev-sync": "^1.9.1",
        "gulp": "^3.9.1",
        "gulp-connect": "^5.0.0",
        "gulp-ejs": "^3.0.1",
        "gulp-htmlmin": "^3.0.0",
        "gulp-rename": "^1.2.2",
        "gulp-replace": "^0.5.4",
        "gulp-sequence": "^0.4.6",
        "happypack": "^3.0.3",
        "html-webpack-plugin": "^2.28.0",
        {{#if_eq preProcessor 'LESS'}}
        "less": "^2.7.2",
        "less-loader": "^4.0.3",{{/if_eq}}
        {{#if_eq preProcessor 'SASS'}}
        "node-sass": "^4.5.2",
        "sass-loader": "^6.0.5",{{/if_eq}}
        "postcss-loader": "^2.0.5",
        {{#if_eq project 'react'}}
        "react": "^15.5.4",
        "react-dom": "^15.5.4",
        "react-hot-loader": "^1.3.1",{{/if_eq}}
        "style-loader": "^0.17.0",
        "url-loader": "^0.5.8",
        {{#if_eq project 'vue'}}
        "vue-loader": "^12.0.3",
        "vue-router": "^2.5.3",
        {{/if_eq}}
        "webpack": "^2.5.1",
        "webpack-parallel-uglify-plugin": "^0.4.1",
        "xo": "^0.18.2"{{#useZepto}},
        "zepto-webpack": "^1.2.1"{{/useZepto}}
    },
    "engines": {
        "node": ">= 4.0.0",
        "npm": ">= 3.0.0"
    }
}
